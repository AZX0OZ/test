-- Подключаем модуль Orion
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Задаем правильный ключ
local correctKey = "RAILkey;1293jj-39dkfi-fu28fj-dnc32u-02od9f"  -- Замените на ваш ключ

-- Создаем окно
local Window = OrionLib:MakeWindow({Name = "RAILhub Key System", HidePremium = true, IntroText = "Добро пожаловать", SaveConfig = false})

-- Поле для хранения введенного ключа
local enteredKey = "RAILkey;1293jj-39dkfi-fu28fj-dnc32u-02od9f"

-- Функция для проверки ключа и запуска скрипта
local function activateKey()
    if enteredKey == correctKey then
        OrionLib:MakeNotification({
            Name = "Успех!",
            Content = "Ключ правильный. Скрипт запущен.",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
        -- Загружаем внешний скрипт
        loadstring(game:HttpGet("https://raw.githubusercontent.com/AZX0OZ/RAIL-HUB/refs/heads/main/RAILHUB%20v%200.4.0"))()
    else
        OrionLib:MakeNotification({
            Name = "Ошибка",
            Content = "Неверный ключ. Попробуйте снова.",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
end

-- Создаем вкладку для ввода ключа
local KeyTab = Window:MakeTab({Name = "Вход", Icon = "rbxassetid://4483345998", PremiumOnly = false})

-- Добавляем поле для ввода ключа
KeyTab:AddTextbox({
    Name = "Введите ключ",
    Default = "",
    TextDisappear = true,
    Callback = function(value)
        enteredKey = value  -- Сохраняем введенный ключ
    end
})

local textToCopy = "https://link-center.net/1248609/1" -- Замените этот текст на нужный вам.

KeyTab:AddButton({
    Name = "Получить ключ",
    Callback = function()
        -- Копирование текста в буфер обмена
        setclipboard(textToCopy)
        print("Ссылка была скопирована: " .. textToCopy) -- Печатает сообщение в консоль для подтверждения
    end    
})

-- Добавляем кнопку для активации ключа
KeyTab:AddButton({
    Name = "Активировать ключ",
    Callback = function()
        activateKey()  -- Проверка ключа при нажатии кнопки
    end
})

-- Показываем окно
OrionLib:Init()
